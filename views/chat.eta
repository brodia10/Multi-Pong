<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width" />
    <title><%= it.title %></title>
    <style>
      body {
        font-family: Tahoma, Geneva, sans-serif;
        text-align: center;
        align-content: center;
        background-image: url(static/assets/tv-background.jpg);
        background-size: 100%
      }
      .main-content {
        background: white;
        width: 500px;
        margin: 50px auto;
        padding: 24px;
        border-radius: 5px;
      }

      .message {
        margin: 14px;
        padding: 10px;
        border: solid;
        border-width: 1px;
        border-radius: 5px;
      }
    </style>

    <!-- colyseus.js client -->
    <script type="text/javascript" src="https://rawcdn.githack.com/colyseus/colyseus.js/b769c403be25dcb52bac71d3fb9f45c9f7ac556e/dist/colyseus.js"></script>

  </head>
  <body>

    <div class="main-content">

      <h1>
        Multi-Pong
      </h1>

      <p><%= it.welcomeMessage %></p>

      <strong>Messages</strong><br>

      <form id="form">
        <input type="text" id="input" value="" autofocus/>
        <input type="submit" value="send" />
      </form>

      <div id="messages"></div>
    </div>

    <script src="static/js/chat.js"></script>
  </body>
</html>